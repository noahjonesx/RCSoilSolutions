@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize AOS animations
            await JSRuntime.InvokeVoidAsync("AOS.init");
            
            // Animate counters
            await AnimateCounters();
        }
    }
    
    private async Task AnimateCounters()
    {
        // Wait for the stats section to come into view
        await Task.Delay(1000);
        
        // Get counter elements and animate them
        await JSRuntime.InvokeVoidAsync("animateCounter", "#stat1", 0, 500, 2000);
        await JSRuntime.InvokeVoidAsync("animateCounter", "#stat2", 0, 350, 2000);
        await JSRuntime.InvokeVoidAsync("animateCounter", "#stat3", 0, 10000, 2000);
        await JSRuntime.InvokeVoidAsync("animateCounter", "#stat4", 0, 15, 2000);
    }
} 